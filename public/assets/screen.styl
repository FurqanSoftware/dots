body, input, select
  font 13px 'Asap', sans-serif

body
  width 990px
  margin 0 auto

a
  &, &:hover, &:focus, &:active
    color #0099e5

  &:hover
    text-decoration none

.nav-pills > .active > a
  &, &:hover, &:focus
    background-color #0099e5

.btn-primary
  background-color #0099e5

#head
  margin 25px 0 0

  a
    color #444

  .logo
    position relative
    left -4px
    text-decoration none

  .credit
    color #888

#main
  margin 30px 0 0

  section
    display none

#prompt
  margin 20px 0 0

#geo .map
  width 100%
  height 425px

#whois pre
  height 425px
  overflow auto
  font 13px 'Ubuntu Mono'
  color #080808

.loading
  opacity 0.5
